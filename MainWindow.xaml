                    <materialDesign:PackIcon Width="20" Height="20" Kind="AccountKeyOutline" />
                </Button>
                -->
                <Button
                    Background="{StaticResource PrimaryHueMidBrush}"
                    Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                    CommandParameter="{x:Static Dock.Bottom}"
                    Grid.Row="12"
                    Grid.Column="0"
                    Content="{materialDesign:PackIcon Kind=FormatWrapTopBottom}"
                    VerticalAlignment="Top"
                    Margin="20,15,20,0" 
                    MaxWidth="50"/>

            </Grid>
        </materialDesign:DrawerHost>
        
        <!-- Прогресс бар -->
        <Grid 
           
            x:Name="progressBar"
            Grid.Column="0"
            Grid.ColumnSpan="12"
