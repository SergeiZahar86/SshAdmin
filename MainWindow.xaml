                    </DataGrid>

                    <StackPanel
                        x:Name="stackPanel"
                        Grid.Row="1"
                        Grid.RowSpan="9"
                        Grid.Column="6"
                        Grid.ColumnSpan="5"
                        DataContext="{Binding SelectedUser}"
                        >
                        <TextBox
                            
                            materialDesign:HintAssist.Hint="Фамилия Имя Отчество"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            />
                        <TextBox 
                            
                            materialDesign:HintAssist.Hint="Логин"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                            />
                        <Border
                            BorderBrush="#FFEEEEEE"
                            BorderThickness="0 0 0 0.6"
                            Margin="0,30,0,0"
                            >
                            <StackPanel>
                                <Label
                                    FontSize="16"
                                    Foreground="{StaticResource TextGray}" Padding="0"
                                    >
                                    Роли
                                </Label>
                                <TextBlock
                                    materialDesign:HintAssist.Hint="Роли"
                                    materialDesign:HintAssist.HelperText="Bigger Helper Text"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" 
                                    />
                            </StackPanel>
                        </Border>
                        
                        
                        <PasswordBox
                            materialDesign:HintAssist.Hint="Пароль"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                            VerticalAlignment="Center"
                            FontSize="16" Margin="0,30,0,0"
                            />
                        <PasswordBox
                            materialDesign:HintAssist.Hint="Повтор пароля"
                            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                            VerticalAlignment="Center"
                            FontSize="16"
                            />
                        <CheckBox
                            x:Name="userRoleCheck"
                            Content="Временный пароль"
                            Margin="0,30,0,0"
                            />
                        <DatePicker
                            Grid.Column="4"
                            Grid.Row="3"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:HintAssist.HelperText="Выбор даты окончания срока действия"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            />
                        <materialDesign:TimePicker
                            Grid.Column="5"
                            Grid.Row="3"
                            Style="{StaticResource MaterialDesignFloatingHintTimePicker}"
                            Margin="0,15,0,0"
                            materialDesign:HintAssist.HelperText="Выбор времени окончания срока действия"
                            materialDesign:HintAssist.HelperTextFontSize="12"
                            />
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="0,50,0,0"
                            >
                            <ComboBox
                                Name="roles_combo"
                                materialDesign:HintAssist.Hint="Выбрать роль"
                                Width="300"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectionChanged="roles_combo_SelectionChanged">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                            <Button
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="150"
                                ToolTip="Resource name: MaterialDesignRaisedButton"
                                Content="Добавить роль"
                                Margin="30,0,0,0" />
                        </StackPanel>
                        
                        
                    </StackPanel>

                    <StackPanel 
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Grid.Row="0"
                        Orientation="Vertical"
                        Margin="20,0"
                        >
                        <Button
                            x:Name="butUser"
                            Content="Добавить пользователя"
                            Click="butUser_Click"
                            />
                    </StackPanel>
                    

                </Grid>

            </materialDesign:Card>

            

            

        </Grid>

        
        <!-- Справочники -->
        <Border 
            x:Name="directories_Page"
            Grid.Column="0"
            Grid.ColumnSpan="12"
            Grid.Row="1"
            Grid.RowSpan="11"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="0"
                    
                    materialDesign:HintAssist.Hint=""
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>


            </Grid>
        </Border>
        
         <!-- Система -->
        <Border 
            x:Name="system_Page"
            Grid.Column="0"
            Grid.ColumnSpan="12"
            Grid.Row="1"
            Grid.RowSpan="11"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
                    Name="text_Gif_System"
                    Text="Попытка соединения по SSH  "
                    Grid.Column="10"
                    Grid.ColumnSpan="2"
                    Grid.Row="6"
                    FontSize="16"
                    TextAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource Gray}"
                    />
                <Image
                    x:Name="image_Gif_System"
                    gif:AnimationBehavior.SourceUri = "img/Blocks_gif.gif"
                    Grid.Column="11"
                    HorizontalAlignment="Right"
                    Height="50"
                    Grid.Row="6"
                    VerticalAlignment="Center"
                    Width="50"
                    />

                <TextBlock
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    FontSize="16"
                    FontFamily="Arial"
                    TextAlignment="Right"
                    Text="Название кластера:  "
                    Foreground="{StaticResource Gray}"
                    Margin="0,10,0,0"
                    />
                <TextBlock
                    x:Name="name_claster"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    FontSize="16"
                    FontFamily="Arial"
                    TextAlignment="Left"
                    Foreground="{StaticResource LightGray}"
                    Margin="0,10,0,0"
                    />
                <!-- Для размещения диаграммы -->
                <Canvas 
                    Name="cnv"
                    Grid.Column="3"
                    Grid.ColumnSpan="6"
                    Grid.Row="0"
                    Grid.RowSpan="7"
                    RenderTransformOrigin="0.5,0.5"
                    Width="802"
                    Height="350"
                    Background="#FF303030"
                    >
                    <Canvas.LayoutTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="scaleTransform"/>
                        </TransformGroup>
                    </Canvas.LayoutTransform>
                </Canvas>
                <!-- Таблица системы -->
                <materialDesign:Card
                    materialDesign:ShadowAssist.ShadowDepth="Depth3"
                    materialDesign:ShadowAssist.ShadowEdges="All"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    Grid.Row="7"
                    Grid.RowSpan="5"
                    Margin="15,15,15,15"
                    >

                    <DataGrid
                        x:Name="datagrid_system"
                        CanUserAddRows="False"
                        AutoGenerateColumns="False"
                        HeadersVisibility="All"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="True"
                        >
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="Время"
                                Binding="{Binding Path=Time}"
                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                />
                            <!-- if you want to use the pop up style (MaterialDesignDataGridTextColumnPopupEditingStyle), you must use MaterialDataGridTextColumn -->
                            <materialDesign:DataGridTextColumn
                                Header="Текст ошибки"
                                Binding="{Binding Path=Text}"
                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                            </materialDesign:DataGridTextColumn>
                            <!-- set a max length to get an indicator in the editor -->
                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>
            </Grid>
        </Border>
        
        <!-- Выезжающие панели -->
        <materialDesign:DrawerHost
            x:Name="DrawerHost"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="2"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            Grid.Column="0" 
            Grid.Row="0"
            Grid.ColumnSpan="12"
            Grid.RowSpan="12">

            <materialDesign:DrawerHost.Style>
                <Style
                    TargetType="{x:Type materialDesign:DrawerHost}"
                    BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding IsChecked, ElementName=BackgroundToggle}"
                            Value="True">
                            <Setter
                                Property="OverlayBackground"
                                Value="{DynamicResource PrimaryHueMidBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </materialDesign:DrawerHost.Style>
            <materialDesign:DrawerHost.LeftDrawerContent >
                <StackPanel
                    Margin="50"
                    
                    >
                    <!--
                    <TextBlock
                        Margin="4"
                        HorizontalAlignment="Center"
