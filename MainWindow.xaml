<Window
    x:Class="IncubeAdmin.MainWindow"
    xmlns:local="clr-namespace:IncubeAdmin" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:System="clr-namespace:System;assembly=mscorlib" 
    mc:Ignorable="d"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Title="MainWindow"
    Height="900"
    Width="1600"
    WindowStartupLocation="CenterScreen"
    Icon="img/icon-comp.png"
    ShowInTaskbar="True"
    MaxWidth="1980" 
    HorizontalContentAlignment="Right"
    MaxHeight="1080"
    VerticalContentAlignment="Center"
    UseLayoutRounding="False"
    WindowStyle="None"
    AllowsTransparency="True"
    Loaded="Window_Loaded" 
    xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
    >




    <Grid
        x:Name="MainGrid"
        Background="{StaticResource Background}"
        
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

       
        
        <!-- Верхняя навигационная панель -->
        <materialDesign:ColorZone 
            Mode="PrimaryMid" 
            Padding="16, 5, 16, 5" 
            Grid.ColumnSpan="12"
            MouseLeftButtonDown="ColorZone_MouseLeftButtonDown"
            Background="{StaticResource LightBackground}"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <DockPanel 
                    Grid.Column="1"
                    Grid.ColumnSpan="11"
                    Height="45"
                    >
                    <!--
                <Button Content="{materialDesign:PackIcon Close}" ToolTip="Icon" DockPanel.Dock="Right" />
                -->
                    <!--
                <materialDesign:PackIcon Kind="Close" DockPanel.Dock="Right" Width="40" Height="40"/>
                -->
                    <Button 
                       Click="CloseButton_Click"
                       Style="{StaticResource MaterialDesignFlatButton}" 
                       Foreground="{StaticResource Gray}"
                       ToolTip="Закрыть" 
                       DockPanel.Dock="Right"
                       Width="40" 
                       Height="30"
                        Padding="4"
                       >
                        <materialDesign:PackIcon
                            Kind="Close"
                            Width="20"
                            Height="20"
                            />
                    </Button>
                    <Button 
                       Click="ExpandButton_Click"
                       Style="{StaticResource MaterialDesignFlatButton}" 
                       Foreground="{StaticResource Gray}"
                       ToolTip="Растянуть" 
                       DockPanel.Dock="Right"
                       Width="40" 
                       Height="30"
                        Padding="4"
                       >
                        <materialDesign:PackIcon
                            Kind="WindowRestore"
                            Width="20"
                            Height="20"
                            />
                    </Button>
                    <Button 
                       Click="MinButton_Click"
                       Style="{StaticResource MaterialDesignFlatButton}" 
                       Foreground="{StaticResource Gray}"
                       ToolTip="Свернуть" 
                       DockPanel.Dock="Right"
                       Width="40" 
                       Height="30"
                        Padding="4"
                       >
                        <materialDesign:PackIcon
                            Kind="WindowMinimize"
                            Width="20"
                            Height="20"
                            />
                    </Button>
                    <!--
                    <ToggleButton 
                        Style="{DynamicResource MaterialDesignSwitchAccentToggleButton}"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"
                        Margin="0,0,20,0" 
                        />
                    -->
                    <StackPanel
                        x:Name="stackPan_Nav"
                       Orientation="Horizontal"
                       materialDesign:RippleAssist.IsCentered="True"
                       Height="35"
                       >
                        <!--
                       <ToggleButton 
                           Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                       -->
                        <ComboBox
                           SelectedIndex="0"
                           Margin="8,0,0,0"
                           BorderThickness="0"
                           materialDesign:ColorZoneAssist.Mode="Standard"
                           materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                           BorderBrush="{DynamicResource MaterialDesignPaper}">
                            <ComboBoxItem Content="Android" />
                            <ComboBoxItem Content="iOS" />
                            <ComboBoxItem Content="Linux" />
                            <ComboBoxItem Content="Windows" />
                        </ComboBox>
                        <materialDesign:ColorZone
                           Mode="Standard"
                           Padding="8 4 8 4"
                           CornerRadius="2"
                           Panel.ZIndex="1"
                           Margin="16 0 0 0"
                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Height="20">
                                    <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                                </Button>
                                <TextBox
                                   Grid.Column="1"
                                   Margin="8 0 0 0"
                                   materialDesign:HintAssist.Hint="Build a search bar"
                                   materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                   BorderThickness="0"
                                   MinWidth="200"
                                   VerticalAlignment="Center" />
                                <!--
                                <Button Style="{DynamicResource MaterialDesignToolButton}" Grid.Column="2">
                                    <materialDesign:PackIcon
                                       Kind="Microphone"
                                       Opacity=".56"
                                       Margin="8 0 0 0" />
                                </Button>
                                -->
                            </Grid>
                        </materialDesign:ColorZone>
                        <Button
                           Style="{DynamicResource MaterialDesignToolForegroundButton}"
                           Margin="8 0 0 0"
                           Panel.ZIndex="0">
                            <materialDesign:PackIcon Kind="Send" />
                        </Button>
                        <TextBlock 
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            Text="INCUBE  ADMIN"
                            FontSize="25" Margin="100,0,0,0"/>
                        
                        <Button
                            x:Name="signUp"
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            ToolTip="Создать соединение"
                            MaxWidth="60"
                            Margin="450,0,20,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="{StaticResource Gray}"
                            Click="connect_Click"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Left"
                            FlowDirection="RightToLeft"
                            Padding="4,0"
                            >
                                <materialDesign:PackIcon Width="30" Height="30" Kind="AccountKeyOutline" />
                            </Button>

                        <materialDesign:Chip
                            x:Name="chip_connect"
                            Content="Connect"
                            Height="35"
                            Background="{StaticResource Background}"
                            Foreground="{StaticResource Gray}"
                            IconBackground="{DynamicResource PrimaryHueLightBrush}"
                            IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                            <materialDesign:Chip.Icon>
                                <materialDesign:PackIcon
                                    Kind="Check" />
                            </materialDesign:Chip.Icon>
                        </materialDesign:Chip>
                        <materialDesign:Chip
                            x:Name="chip_block"
                            Content="Not conn"
                            Height="35"
                            Background="{StaticResource Background}"
                            Foreground="{StaticResource Gray}"
                            IconBackground="{DynamicResource SecondaryHueMidBrush}"
                            IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}">
                            <materialDesign:Chip.Icon>
                                <materialDesign:PackIcon
                                    Kind="BlockHelper" />
                            </materialDesign:Chip.Icon>
                        </materialDesign:Chip>
                    </StackPanel>
                </DockPanel>
            </Grid>

        </materialDesign:ColorZone>

        <!-- Пользователи -->
        <Grid 
            x:Name="users_Page"
            Grid.Column="0"
            Grid.ColumnSpan="12"
            Grid.Row="1"
            Grid.RowSpan="11"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            

            <!--
                MouseLeftButtonDown="datagrid_MouseLeftButtonDown"
                MouseDown="datagrid_MouseDown"
                PreviewMouseDown="datagrid_PreviewMouseDown"
                PreviewMouseLeftButtonDown="datagrid_PreviewMouseLeftButtonDown"
                -->

            <materialDesign:Card
                materialDesign:ShadowAssist.ShadowDepth="Depth1"
                Padding="20"
                Grid.Column="0"
                Grid.ColumnSpan="12"
                Grid.Row="0"
                Grid.RowSpan="12"
                Margin="15"
                >
               

                <Grid
                    x:Name="users_card"
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    
                    
                    
                    <!--
                    x:Name="datagrid_users"
                        Grid.Column="0"
                        Grid.ColumnSpan="5"
                        Grid.Row="1"
                        Grid.RowSpan="11"
                        Margin="15"
                        ColumnWidth="*" 
                        BorderThickness="2"
                        ItemsSource="{Binding Users}"
                        AutoGenerateColumns="False"
                        SelectedItem="{Binding SelectedUser}" 
                        SelectionChanged="datagrid_SelectionChanged"
                        CanUserAddRows="False"
                        SelectionUnit="Cell"
                    -->
                    
                    <DataGrid 
                        x:Name="datagrid_users"
                        Grid.Column="0"
                        Grid.ColumnSpan="5"
                        Grid.Row="1"
                        Grid.RowSpan="11"
                        Margin="15"
                        ColumnWidth="*" 
                        BorderThickness="2"
                        AutoGenerateColumns="False"
                        SelectionChanged="datagrid_SelectionChanged"
                        
