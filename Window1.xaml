        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Панель слева -->
        <materialDesign:Card
            Background="{DynamicResource PrimaryHueMidBrush}"
            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Grid.RowSpan="12"
            Padding="8">
            <StackPanel Margin="0,70,0,0">
                <TextBlock
                    Margin="16 16 12 8"
                    FontSize="16"
                    Text="Страницы" />

                <RadioButton
                    x:Name="radio1"
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4"
                    IsChecked="True"
                    Content="FIRST"
                    Cursor="Hand"
                    Click="radio1_Click" />
                <RadioButton
                    x:Name="radio2"
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4"
                    IsChecked="False"
                    Content="SECOND" 
                    Cursor="Hand" 
                    Click="radio2_Click"/>
                <RadioButton
                    x:Name="radio3"
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4"
                    IsChecked="False"
                    Content="THIRD"
                    Cursor="Hand" Click="radio3_Click"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Верхняя навигационная панель -->
        <materialDesign:ColorZone 
            Mode="PrimaryMid" 
            Padding="16" 
            Grid.ColumnSpan="12"
            MouseLeftButtonDown="ColorZone_MouseLeftButtonDown"
            >
