                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Padding="15"
                    >

                    <Wpf:PieChart
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="0,0,0,70" 
                        Height="420"
                        Width="420"
                        LegendLocation = "Bottom" DataClick = "Chart_OnDataClick" 
                        >
                        <Wpf:PieChart.Series>
                            <Wpf:PieSeries Title = "Maria" Values = "3" DataLabels = "True"   
                               LabelPoint = "{Binding PointLabel}" />
                            <Wpf:PieSeries Title = "Charles" Values = "10" DataLabels = "True"    
                               LabelPoint = "{Binding PointLabel}" />
                            <Wpf:PieSeries Title = "Frida" Values = "6" DataLabels = "True"    
                               LabelPoint = "{Binding PointLabel}" />
                            <Wpf:PieSeries Title = "Frederic" Values = "2" DataLabels = "True"    
                               LabelPoint = "{Binding PointLabel}" />
                        </Wpf:PieChart.Series>

                    </Wpf:PieChart>

                </materialDesign:Card>

                <materialDesign:Card
                    Grid.Column="6"
                    Grid.ColumnSpan="4"
                    Grid.Row="1"
                    Grid.RowSpan="8"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Padding="15"
                    
                    >
                    <Wpf:PieChart 
                        Name="Chart"
                        Grid.Row="1"
                        Series="{Binding SeriesCollection}" 
                        LegendLocation="Bottom"
                        InnerRadius="100"
                        Margin="0,0,0,70">
                        <Wpf:PieChart.ChartLegend>
                            <Wpf:DefaultLegend BulletSize="20"></Wpf:DefaultLegend>
                        </Wpf:PieChart.ChartLegend>
                        <Wpf:PieChart.DataTooltip>
                            <Wpf:DefaultTooltip BulletSize="20"></Wpf:DefaultTooltip>
                        </Wpf:PieChart.DataTooltip>
                    </Wpf:PieChart>

                </materialDesign:Card>

                <StackPanel Grid.Row="0"
                            Grid.RowSpan="15"
                            Grid.Column="10"
                            Grid.ColumnSpan="2"
                            Orientation="Vertical"
                            Margin="30,30,30,30"
                            
                            
                            >
                    <Button 
                        Click="UpdateAllOnClick"
                        Padding="10 0"
                        Margin="0,10,0,10"
                        >
                        Move All
                    </Button>
                    <Button
                        Click="RestartOnClick"
                        Margin="0,10,0,10"
                        >
                        Restart
                    </Button>
                    <TextBlock 
                        VerticalAlignment="Center"
                        Padding="10 0"
                        Margin="0,10,0,10"
                        >
                        Series
                    </TextBlock>
                    <Button 
                        Click="AddSeriesOnClick"
                        MinWidth="30"
                        Margin="0,10,0,10"
                        >
                        +
                    </Button>
                    <Button
                        Click="RemoveSeriesOnClick"
                        MinWidth="30"
                        Margin="0,10,0,10"
                        >
                        -
                    </Button>
                    <TextBlock 
                        VerticalAlignment="Center"
                        Padding="10 0"
                        Margin="0,10,0,10"
                        >
                        Values
                    </TextBlock>
                    <Button 
                        Height="30"
                        Click="AddValueOnClick"
                        MinWidth="30"
                        Margin="0,10,0,10"
                        >
                        +
                    </Button>
                    <Button 
                        Height="30"
                        Click="RemoveValueOnClick"
                        MinWidth="30" 
                        Margin="0,10,0,10"
                        >
                        -
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

